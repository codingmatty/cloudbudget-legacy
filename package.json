{
  "name": "CloudBudget",
  "version": "0.1.0",
  "description": "A simple Budgeting Web App",
  "main": "index.js",
  "config": {
    "server": {
      "port": "9090",
      "reloadport": "9091"
    },
    "mongodb": {
      "dbpath": "db",
      "port": "30000"
    }
  },
  "scripts": {
    "clean": "rimraf public/*",
    
    "prebuild": "npm run clean -s",
    "build": "npm run build:scripts -s && npm run build:styles -s && npm run build:markup -s",
    "build:scripts": "browserify -t debowerify -d source/scripts/cloudbudget.js  > public/main.js",
    "prebuild:styles": "mkdir -p public/assets/bootstrap && ncp bower_components/bootstrap/dist/ public/assets/bootstrap/",
    "build:styles": "node-sass source/styles/index.scss -o build && cleancss -o public/main.min.css build/*.css",
    "postbuild:styles": "rimraf build",
    "build:markup": "ncp source/markup/ public/",
    
    "test": "karma start --singleRun",
    "watch:test": "karma start",
    "watch": "npm run watch:build -s",
    
    "prewatch:build": "npm run clean -s",
    
    "watch:build": "parallelshell \"npm run watch:build:scripts\" \"npm run watch:build:styles\" \"npm run watch:build:markup\"",
    "watch:build:scripts": "watch 'npm run build:scripts' source/scripts",
    "watch:build:styles": "watch 'npm run build:styles' source/styles",
    "watch:build:markup": "watch 'npm run build:markup' source/markup",
    
    "open:prod": "opener http://example.com",
    "open:stage": "opener http://staging.example.internal",
    "open:dev": "opener http://localhost:$npm_package_config_server_port",
    
    "deploy:prod": "s3-cli sync ./public/ s3://example-com/prod-site/",
    "deploy:stage": "s3-cli sync ./public/ s3://example-com/stage-site/",
    
    "db:serve": "parallelshell \"npm run db:start -s\" \"npm run serve -s\"",
    "db:start": "mongod --dbpath $npm_package_config_mongodb_dbpath --port $npm_package_config_mongodb_port",
    
    "serve": "nodemon server/server.js",
    
    "live-reload": "live-reload --port $npm_package_config_server_reloadport public/",
    
    "dev": "npm run open:dev -s & parallelshell \"npm run watch -s\" \"npm run live-reload -s\" \"npm run db:start -s\" \"npm run serve -s\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swengmatt/cloudbudget.git"
  },
  "author": "Matthew Jacobs",
  "license": "MIT",
  "dependencies": {
    "body-parser": "latest",
    "express": "latest",
    "lodash": "latest",
    "mongoose": "latest"
  },
  "devDependencies": {
    "bower": "latest",
    "browserify": "latest",
    "clean-css": "latest",
    "debowerify": "~1.2.0",
    "exorcist": "latest",
    "hashmark": "latest",
    "http-server": "latest",
    "jade": "latest",
    "jshint": "latest",
    "karma": "latest",
    "karma-browserify": "latest",
    "karma-cli": "latest",
    "karma-mocha": "latest",
    "karma-phantomjs-launcher": "latest",
    "live-reload": "latest",
    "minifyify": "latest",
    "mocha": "latest",
    "ncp": "latest",
    "node-sass": "latest",
    "nodemon": "latest",
    "opener": "latest",
    "parallelshell": "latest",
    "rimraf": "latest",
    "s3-cli": "latest",
    "watch": "latest"
  }
}
