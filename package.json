{
  "name": "CloudBudget",
  "version": "0.0.1",
  "description": "A simple Budgeting Web App",
  "main": "index.js",
  "config": {
    "mongodb": {
      "dbpath": "db",
      "port": "30000"
    }
  },
  "scripts": {
    "clean": "rimraf public/*",
    
    "prebuild": "npm run clean -s",
    "build": "npm run build:scripts -s && npm run build:styles -s && npm run build:markup -s",
    
    "build:scripts": "browserify -t debowerify -d source/scripts/cloudbudget.js  > public/main.js",
    "prebuild:styles": "mkdir -p public/assets/bootstrap && ncp bower_components/bootstrap/dist/ public/assets/bootstrap/",
    "build:styles": "node-sass source/styles/index.scss -o build && cleancss -o public/main.min.css build/*.css",
    "postbuild:styles": "rimraf build",
    "build:markup": "ncp source/markup/ public/",
    
    "test": "karma start --singleRun",
    "watch:test": "karma start",
    
    "watch": "npm run watch:build -s",
    "prewatch:build": "npm run clean -s",
    "watch:build": "parallelshell \"npm run watch:build:scripts\" \"npm run watch:build:styles\" \"npm run watch:build:markup\"",
    "watch:build:scripts": "nodemon -q -w source/scripts --ext js --exec 'npm run build:scripts'",
    "watch:build:styles": "nodemon -q -w source/styles --ext scss,css --exec 'npm run build:styles'",
    "watch:build:markup": "nodemon -q -w source/markup --ext html --exec 'npm run build:markup'",
    
    "open:prod": "opener http://example.com",
    "open:stage": "opener http://staging.example.internal",
    "open:dev": "opener http://localhost:9090",
    
    "deploy:prod": "s3-cli sync ./public/ s3://example-com/prod-site/",
    "deploy:stage": "s3-cli sync ./public/ s3://example-com/stage-site/",
    
    "db:serve": "parallelshell \"npm run db:start -s\" \"npm run serve -s\"",
    "db:start": "mongod --dbpath $npm_package_config_mongodb_dbpath --port $npm_package_config_mongodb_port",
    "serve": "node server/server.js",
    
    "live-reload": "live-reload --port 9091 public/",
    
    "dev": "npm run open:dev -s & parallelshell \"npm run watch -s\" \"npm run live-reload -s\" \"npm run db:start -s\" \"npm run serve -s\"",
    
    
    "build:scripts-save": "browserify -d source/scripts/**/*.js -p [minifyify --compressPath . --map main.js.map --output public/main.js.map] | hashmark -n public/main.js -s -l 8 -m assets.json 'public/{name}{hash}{ext}'",
    "build:styles-save": "node-sass --source-map source/styles/main.scss -o public/ && hashmark -s -l 8 -m assets.json public/main.css 'public/{name}{hash}{ext}'",
    "build:markup-save": "jade source/markup/index.jade --obj assets.json -o public",
    "watch-save": "parallelshell \"npm run watch:test -s\" \"npm run watch:build -s\"",
    "serve-save": "http-server -p 9090 public/"
  },
  "repository": {
    "type": "git",
    "url": "https://git.majacobs.net/majacobs/cloudbudget.git"
  },
  "author": "Matthew Jacobs",
  "license": "ISC",
  "dependencies": {
    "body-parser": "latest",
    "express": "latest",
    "lodash": "latest",
    "mongoose": "latest"
  },
  "devDependencies": {
    "bower": "latest",
    "browserify": "latest",
    "clean-css": "latest",
    "debowerify": "latest",
    "exorcist": "latest",
    "hashmark": "latest",
    "http-server": "latest",
    "jade": "latest",
    "jshint": "latest",
    "karma": "latest",
    "karma-browserify": "latest",
    "karma-cli": "latest",
    "karma-mocha": "latest",
    "karma-phantomjs-launcher": "latest",
    "live-reload": "latest",
    "minifyify": "latest",
    "mocha": "latest",
    "ncp": "latest",
    "nodemon": "latest",
    "opener": "latest",
    "parallelshell": "latest",
    "rimraf": "latest",
    "s3-cli": "latest",
    "node-sass": "latest"
  }
}
